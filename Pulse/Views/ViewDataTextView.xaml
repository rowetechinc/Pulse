												<ColumnDefinition Width="Auto" />
												<ColumnDefinition Width="Auto" />
												<ColumnDefinition Width="Auto" />
												<ColumnDefinition Width="Auto" />
											</Grid.ColumnDefinitions>
											
											<Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Background="{StaticResource PulseSettingsBackBorder1Color}" CornerRadius="3" />
											
											<!-- Choose between seeing Beam, Earth or Instrument Velocity Data -->
											<TextBlock Grid.Column="0" Grid.Row="0" Text="Velocity Transform: " Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Right" Margin="5"/>
											<!--ListView Grid.Column="1" Grid.Row="0" ItemsSource="{Binding Path=TransformList}" SelectedItem="{Binding Path=Transform}" SelectionMode="Single" Style="{StaticResource ListViewToggleButtonStyle}" Background="Transparent" BorderThickness="0">
												<ListView.ItemsPanel>
													<ItemsPanelTemplate >
														<VirtualizingStackPanel Orientation="Horizontal"/>
													</ItemsPanelTemplate>
												</ListView.ItemsPanel>
											</ListView-->
											<ComboBox Grid.Column="1" Grid.Row="0" ItemsSource="{Binding Path=TransformList}" SelectedItem="{Binding Path=SelectedTransform}" />
											
										</Grid>
									</Grid>
								</Border><!-- Transformation -->
								
							</Grid>
						</Border>
					</Expander>
				</Canvas>
					
			</Grid>
