										<Grid.RowDefinitions>
											<RowDefinition Height="Auto" />
											<RowDefinition Height="Auto" />
											<RowDefinition Height="Auto" />
											<RowDefinition Height="Auto" />
											<RowDefinition Height="Auto" />
										</Grid.RowDefinitions>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto" />
											<ColumnDefinition Width="Auto" />
										</Grid.ColumnDefinitions>
										
										<Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Background="{StaticResource PulseSettingsBackBorder1Color}" CornerRadius="3" />
										
										<TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Subsystem" Margin="5" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center"  FontSize="16" />
										<TextBlock Grid.Column="0" Grid.Row="1" Text="Code:" Margin="5" Foreground="{StaticResource PulseFontColor}" />
										<TextBlock Grid.Column="0" Grid.Row="2" Text="Index:" Margin="5" Foreground="{StaticResource PulseFontColor}" />
										<TextBlock Grid.Column="0" Grid.Row="3" Text="Desc:" Margin="5" Foreground="{StaticResource PulseFontColor}" />
										<TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Path=SubsystemCode}" Margin="5" Foreground="{StaticResource PulseFontColor}" FontSize="16" />
										<TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding Path=SubsystemIndex}" Margin="5" Foreground="{StaticResource PulseFontColor}" FontSize="16" />
										<TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding Path=SubsystemDesc}" Margin="5" Width="150" Height="200" Foreground="{StaticResource PulseFontColor}" TextWrapping="Wrap" FontSize="16" />
										
										<!-- Set Default Button -->
										<Button Grid.Column="1" Grid.Row="4" Command="{Binding Path=SetDefaultsCommand}" Style="{StaticResource ButtonStyle}"  Width="60" Height="60" Margin="5" Foreground="#FFC5CFC0" BorderBrush="#FFD9D3CE">
											<Grid>
												<Grid.RowDefinitions>
													<RowDefinition Height="*" />
													<RowDefinition Height="*" />
												</Grid.RowDefinitions>
												<Image Grid.Row="0" Source="../Images/default.png" />
												<Viewbox Grid.Row="1">
													<StackPanel>
														<TextBlock Text="Set" HorizontalAlignment="Center" />
														<TextBlock Text="Defaults" HorizontalAlignment="Center" />
													</StackPanel>
												</Viewbox>
											</Grid>
										</Button>
									</Grid>
								</Border> <!-- Subsystem Desc -->
								
								<!-- Screen Size -->
