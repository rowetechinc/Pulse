<UserControl x:Class="RTI.ViewDataTextView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
			 xmlns:extToolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
			 xmlns:cal="http://www.caliburnproject.org" 
             mc:Ignorable="d" 
             d:DesignHeight="2000" d:DesignWidth="800">
<ScrollViewer HorizontalScrollBarVisibility="Auto">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions> 
		
		<Viewbox Grid.Column="0" VerticalAlignment="Top">
			<ContentControl  cal:View.Model="{Binding TextEnsembleVM}" />
		</Viewbox>
		
		<Grid Grid.Column="1">
			<Grid >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
						
				<!-- Bin Data -->
				<Grid Grid.Column="1" Grid.Row="2" Grid.RowSpan="2">		
					<ListView Grid.Column="0" Grid.Row="0" Margin="5" ItemsSource="{Binding BinList}" SelectionMode="Single" FontFamily="Courier New" FontSize="{Binding FontSize}" >
						<ListView.View>
							<GridView  >
								<GridViewColumn Header="{Binding BinListHeader}"  />
							</GridView>
						</ListView.View>
					</ListView>	
				</Grid>
				
				<!-- Bottom Track Data -->
				<Grid Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					<Border  Margin="5" Background="{StaticResource PulseBackBorder2Color}">
						<TextBlock Text="Bottom Track" Foreground="{StaticResource PulseFontColor}" FontSize="18.667" HorizontalAlignment="Center" />
					</Border>
					
					<!-- Bottom Track Ping Info -->
					<Grid Grid.Row="1" Margin="5" MaxWidth="230">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>
						<Border Grid.Column="0" CornerRadius="3" Margin="5" Background="{StaticResource PulseBackBorder2Color}">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
								</Grid.RowDefinitions>
								<TextBlock Grid.Row="0" Text="Status:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="5" />
								<TextBlock Grid.Row="1" Text="Ping Count:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="5" />
								<TextBlock Grid.Row="2" Text="First Ping Time:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="5" />
								<TextBlock Grid.Row="3" Text="Last Ping Time:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="5" />
							</Grid>
						</Border>
						<Grid Grid.Column="1" Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<ScrollViewer Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="5" Width="100" HorizontalAlignment="Left" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible" >
								<TextBlock VerticalAlignment="Center" Text="{Binding Path=DisplayEnsemble.BottomTrackData.Status}" Foreground="{StaticResource PulseFontHighlightColor}" FontWeight="Bold" >
									<ToolTipService.ToolTip> 
										<TextBlock Foreground="Black" Text="{Binding Path=DisplayEnsemble.BottomTrackData.Status}" />
									</ToolTipService.ToolTip>
								</TextBlock>
							</ScrollViewer>
							
							<TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Text="{Binding DisplayEnsemble.BottomTrackData.ActualPingCount}" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontHighlightColor}" Margin="5" FontWeight="Bold" />
							
							<TextBlock Grid.Column="0" Grid.Row="2" Text="{Binding DisplayEnsemble.BottomTrackData.FirstPingTimeRounded}" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontHighlightColor}" Margin="5" FontWeight="Bold" />
							<TextBlock Grid.Column="1" Grid.Row="2" Text="Sec" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontColor}" Margin="5" />
							
							<TextBlock Grid.Column="0" Grid.Row="3" Text="{Binding DisplayEnsemble.BottomTrackData.LastPingRounded}" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontHighlightColor}" Margin="5" FontWeight="Bold" />
							<TextBlock Grid.Column="1" Grid.Row="3" Text="Sec" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontColor}" Margin="5" />
						</Grid>
					</Grid>
						
					<!-- Bottom Track Range Data -->
					<Grid Grid.Row="2" Margin="5">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
							<TextBlock Text="Range" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center" />
						</Border>

						<Grid Grid.Row="1">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />	
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtRangeB0}" Margin="5" FontWeight="Bold" />
							<TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtRangeB1}" Margin="5" FontWeight="Bold" />
							<TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtRangeB2}" Margin="5" FontWeight="Bold" />
							<TextBlock Grid.Column="3" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtRangeB3}" Margin="5" FontWeight="Bold" />
						</Grid>
					</Grid>
						
					<!-- Bottom Track Velocity Data -->
					<Grid Grid.Row="3" Margin="5">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
							<TextBlock Text="Beam Velocity" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center"/>
						</Border>
						<Border Grid.Row="2" Background="{StaticResource PulseBackBorder2Color}">
							<TextBlock Text="Instrument Velocity" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center"/>
						</Border>
						<Border Grid.Row="4" Background="{StaticResource PulseBackBorder2Color}">
							<TextBlock Text="Earth Velocity" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center"/>
						</Border>
						
						<!-- Bottom Track Beam Velocity Data -->
						<Grid Grid.Row="1" >
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock Grid.Column="0"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtBeamVelB0}" FontWeight="Bold" />
							<TextBlock Grid.Column="1"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtBeamVelB1}" FontWeight="Bold" />
							<TextBlock Grid.Column="2"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtBeamVelB2}" FontWeight="Bold" />
							<TextBlock Grid.Column="3"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtBeamVelB3}" FontWeight="Bold" />
							<TextBlock Grid.Column="0"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodBeamB0}" FontWeight="Bold" />
							<TextBlock Grid.Column="1"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodBeamB1}" FontWeight="Bold" />
							<TextBlock Grid.Column="2"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodBeamB2}" FontWeight="Bold" />
							<TextBlock Grid.Column="3"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodBeamB3}" FontWeight="Bold" />
						</Grid>
							
						<!-- Bottom Track Instrument Velocity Data -->
						<Grid Grid.Row="3" >
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock Grid.Column="0"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtInstrVelB0}" FontWeight="Bold" />
							<TextBlock Grid.Column="1"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtInstrVelB1}" FontWeight="Bold" />
							<TextBlock Grid.Column="2"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtInstrVelB2}" FontWeight="Bold" />
							<TextBlock Grid.Column="3"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtInstrVelB3}" FontWeight="Bold" />
							<TextBlock Grid.Column="0"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodInstrB0}" FontWeight="Bold" />
							<TextBlock Grid.Column="1"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodInstrB1}" FontWeight="Bold" />
							<TextBlock Grid.Column="2"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodInstrB2}" FontWeight="Bold" />
							<TextBlock Grid.Column="3"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodInstrB3}" FontWeight="Bold" />
						</Grid>
							
						<!-- Bottom Track Earth Velocity Data -->
						<Grid Grid.Row="5" >
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock Grid.Column="0"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtEarthVelB0}" FontWeight="Bold" />
							<TextBlock Grid.Column="1"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtEarthVelB1}" FontWeight="Bold" />
							<TextBlock Grid.Column="2"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtEarthVelB2}" FontWeight="Bold" />
							<TextBlock Grid.Column="3"  Grid.Row="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtEarthVelB3}" FontWeight="Bold" />
							<TextBlock Grid.Column="0"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodEarthB0}" FontWeight="Bold" />
							<TextBlock Grid.Column="1"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodEarthB1}" FontWeight="Bold" />
							<TextBlock Grid.Column="2"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodEarthB2}" FontWeight="Bold" />
							<TextBlock Grid.Column="3"  Grid.Row="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtGoodEarthB3}" FontWeight="Bold" />
						</Grid>
					</Grid>
						
					<!-- Bottom Track SNR, Amp and Correlation -->
					<Grid Grid.Row="4" Margin="5">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
							<TextBlock Text="Signal To Noise Ratio" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center" />
						</Border>
						<Border Grid.Row="2" Background="{StaticResource PulseBackBorder2Color}">
							<TextBlock Text="Amplitude" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center"  />
						</Border>
						<Border Grid.Row="4" Background="{StaticResource PulseBackBorder2Color}">
							<TextBlock Text="Correlation" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center"/>
						</Border>
						
						<!-- Signal To Noise Ratio -->
						<Grid Grid.Row="1">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />	
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtSnrB0}" Margin="5" FontWeight="Bold" />
							<TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtSnrB1}" Margin="5" FontWeight="Bold"/>
							<TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtSnrB2}" Margin="5" FontWeight="Bold"/>
							<TextBlock Grid.Column="3" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtSnrB3}" Margin="5" FontWeight="Bold"/>
						</Grid>
						
						<!-- Amplitude -->
						<Grid Grid.Row="3">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />	
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtAmpB0}" Margin="5" FontWeight="Bold" />
							<TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtAmpB1}" Margin="5" FontWeight="Bold"/>
							<TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtAmpB2}" Margin="5" FontWeight="Bold"/>
							<TextBlock Grid.Column="3" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtAmpB3}" Margin="5" FontWeight="Bold"/>
						</Grid>
						
						<!-- Correlation -->
						<Grid Grid.Row="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="*" />	
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtCorrB0}" Margin="5" FontWeight="Bold"/>
							<TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtCorrB1}" Margin="5" FontWeight="Bold"/>
							<TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtCorrB2}" Margin="5" FontWeight="Bold"/>
							<TextBlock Grid.Column="3" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=BtCorrB3}" Margin="5" FontWeight="Bold"/>
						</Grid>
					</Grid>					
				</Grid>
				
				<!--Water Track-->
				<Grid Grid.Row="3" Margin="5">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					
					<Border Grid.Row="0"  Margin="5" Background="{StaticResource PulseBackBorder2Color}">
						<TextBlock Text="Water Track" Foreground="{StaticResource PulseFontColor}" FontSize="18.667" HorizontalAlignment="Center" />
					</Border>
					
					<!-- Water Track Info -->
					<Grid Grid.Row="1" Margin="5" MaxWidth="230">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>
						<Border Grid.Column="0" CornerRadius="3" Margin="5" Background="{StaticResource PulseBackBorder2Color}">
							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
								</Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
								<TextBlock Grid.Row="0" Grid.Column="0" Text="Instrument Bin:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="5" />
								<TextBlock Grid.Row="1" Grid.Column="0" Text="Earth Bin:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="5" />
								
								<TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WtInstrumentDepthLayer}" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontHighlightColor}" Margin="5" FontWeight="Bold" />
								<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding WtEarthDepthLayer}" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontHighlightColor}" Margin="5" FontWeight="Bold" />
							</Grid>
						</Border>
					</Grid>
					
					<!-- Water Track Instrument and Earth -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
                            <TextBlock Text="Instrument Water Track" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center" />
                        </Border>
                        <Border Grid.Row="2" Background="{StaticResource PulseBackBorder2Color}">
                            <TextBlock Text="Earth Water Track" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center"  />
                        </Border>

                        <!-- Instrument Water Track -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WtInstrVelB0}" Margin="5" FontWeight="Bold"  />
                            <TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WtInstrVelB1}" Margin="5" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WtInstrVelB2}" Margin="5" FontWeight="Bold"/>
                            <TextBlock Grid.Column="3" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WtInstrVelB3}" Margin="5" FontWeight="Bold"/>
                        </Grid>

                        <!-- Earth Water Track -->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WtEarthVelB0}" Margin="5" FontWeight="Bold" d:IsHidden="True" />
                            <TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WtEarthVelB1}" Margin="5" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WtEarthVelB2}" Margin="5" FontWeight="Bold"/>
                        </Grid>

                    </Grid> 
                </Grid>


                <!--Range Track-->
                <Grid Grid.Row="4" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"  Margin="5" Background="{StaticResource PulseBackBorder2Color}">
                        <TextBlock Text="Range Tracking" Foreground="{StaticResource PulseFontColor}" FontSize="18.667" HorizontalAlignment="Center" />
                    </Border>

                    <!-- Range Track Info -->
                    <Grid Grid.Row="1" Margin="5" MaxWidth="230">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" CornerRadius="3" Margin="5" Background="{StaticResource PulseBackBorder2Color}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Number Beams:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="5" />

                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RtNumBeams}" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontHighlightColor}" Margin="5" FontWeight="Bold" />
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Range Track SNR, Range and Pings -->
                        <Grid Grid.Row="2" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
                                <TextBlock Text="Range Track SNR" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center" />
                            </Border>
                            <Border Grid.Row="2" Background="{StaticResource PulseBackBorder2Color}">
                                <TextBlock Text="Range Track Range" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center"  />
                            </Border>
                            <Border Grid.Row="4" Background="{StaticResource PulseBackBorder2Color}">
                                <TextBlock Text="Range Track Good Pings" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center"  />
                            </Border>
                            <Border Grid.Row="6" Background="{StaticResource PulseBackBorder2Color}">
                                <TextBlock Text="Range Track Amplitude" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center"  />
                            </Border>
                            <Border Grid.Row="8" Background="{StaticResource PulseBackBorder2Color}">
                                <TextBlock Text="Range Track Correlation" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center"  />
                            </Border>
                            <Border Grid.Row="10" Background="{StaticResource PulseBackBorder2Color}">
                                <TextBlock Text="Range Track Beam Velocity" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center"  />
                            </Border>
                            <Border Grid.Row="12" Background="{StaticResource PulseBackBorder2Color}">
                                <TextBlock Text="Range Track Instrument Velocity" Foreground="{StaticResource PulseFontColor}" Margin="5,0,0,0" HorizontalAlignment="Center"  />
                            </Border>
