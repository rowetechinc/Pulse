                            <TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=RangeBeam2}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="3" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=RangeBeam3}" Margin="5" FontWeight="Bold" />
                        </Grid>
                    </Grid>

                    <!-- DVL DMG -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
                            <TextBlock Text="DMG" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center" />
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=DmgEast}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=DmgNorth}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=DmgUpward}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="3" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=DmgError}" Margin="5" FontWeight="Bold" />
                        </Grid>
                    </Grid>

                    <Border  Margin="5" Background="{StaticResource PulseBackBorder2Color}">
                        <TextBlock Text="Reference Layer" Foreground="{StaticResource PulseFontColor}" FontSize="18.667" HorizontalAlignment="Center" />
                    </Border>

                    <!-- Reference Layer Info -->
                    <Grid Grid.Row="1" Margin="5" MaxWidth="250">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" CornerRadius="3" Margin="5" Background="{StaticResource PulseBackBorder2Color}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Ref Layer Min:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="2" />
                                <TextBlock Grid.Row="1" Text="Ref Layer Max:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="2" />
                                <TextBlock Grid.Row="2" Text="Ref Layer Center:" HorizontalAlignment="Right" Foreground="{StaticResource PulseFontColor}" Margin="2" />
                            </Grid>
                        </Border>
                        <Grid Grid.Column="1" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding RefLayerMin}" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontHighlightColor}" Margin="2" FontWeight="Bold" />
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding RefLayerMin}" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontHighlightColor}" Margin="2" FontWeight="Bold" />
                            <TextBlock Grid.Column="0" Grid.Row="2" Text="{Binding WmEarthRangeToWaterMassCenter}" HorizontalAlignment="Left" Foreground="{StaticResource PulseFontHighlightColor}" Margin="2" FontWeight="Bold" />
                        </Grid>
                    </Grid>

                    <!-- DVL Reference Layer Instrument  -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
                            <TextBlock Text="Ref Layer Instrument" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center" />
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmXVelocity}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmYVelocity}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmZVelocity}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="3" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmErrorVelocity}" Margin="5" FontWeight="Bold" />
                        </Grid>
                    </Grid>

                    <!-- DVL Reference Layer Ship  -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
                            <TextBlock Text="Ref Layer Ship" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center" />
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmTransverseVelocity}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmLongitudinalVelocity}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmNormalVelocity}" Margin="5" FontWeight="Bold" />
                        </Grid>
                    </Grid>

                    <!-- DVL Reference Layer Earth  -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
                            <TextBlock Text="Ref Layer Earth" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center" />
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmEastVelocity}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmNorthVelocity}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmUpwardVelocity}" Margin="5" FontWeight="Bold" />
                        </Grid>
                    </Grid>

                    <!-- DVL Reference Layer Earth DMG  -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
                            <TextBlock Text="Ref Layer Earth DMG" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center" />
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=DmgRefEast}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=DmgRefNorth}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=DmgRefUpward}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="3" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=DmgRefError}" Margin="5" FontWeight="Bold" />
                        </Grid>
                    </Grid>

                    <!-- DVL Reference Layer Earth Distance  -->
                    <Grid Grid.Row="2" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource PulseBackBorder2Color}">
                            <TextBlock Text="Ref Layer Earth Distance" Foreground="{StaticResource PulseFontColor}" HorizontalAlignment="Center" />
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmEastDistance}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="1" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmNorthDistance}" Margin="5" FontWeight="Bold" />
                            <TextBlock Grid.Column="2" Foreground="{StaticResource PulseFontHighlightColor}" HorizontalAlignment="Center" Text="{Binding Path=WmUpwardDistance}" Margin="5" FontWeight="Bold" />
                        </Grid>
                    </Grid>

                </StackPanel>
                
            </StackPanel>

            <!--Progress Ring-->
            <Viewbox Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3" Height="200" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" >
                <mahapps:ProgressRing IsActive="{Binding IsLoading}" Foreground="Red" Height="200" Width="200" />
            </Viewbox>

        </Grid>
    </ScrollViewer>
</UserControl>
